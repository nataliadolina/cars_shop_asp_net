@model Order
@{
    Layout = "_Layout";
}

<div class="container">
    <h1> Оформление заказа </h1>
    <form asp-action="Checkout" method="post" class="form-horizontal">
        <div class="form-group">
            <label asp-for="Name"></label>
            <div class="col-md-5">
                <input asp-for="Name" class="form-control" required="true"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Surname"></label>
            <div class="col-md-5">
                <input asp-for="Surname" class="form-control" required="true" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Adress">Address</label>
            <div class="col-md-5">
                <input asp-for="Adress" class="form-control" required="true"/>
                <span asp-validation-for="Adress" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <div class="col-md-5">
                <input asp-for="Email" class="form-control" type="email" required="true"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Phone"></label>
            <div class="col-md-5">
                <input asp-for="Phone" class="form-control" required="true"/>
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
        </div>
        <input class="btn btn-primary mt-2" type="submit" value="Complete the order"></input>
    </form>
</div>
