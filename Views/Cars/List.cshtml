@using Shop.Models;
@model IEnumerable<Car>
@{
    Layout = null;
}
<html>
    <meta name="viewport" content="width=device-width" />
    <title>List</title>
</html>
<body>
    <h2>Все автомообили</h2>
    @{
        foreach (var car in Model)
        {
            <div>
            <h2>Модель: @car.Name</h2>
            <p>Цена: @car.Price.ToString("c")</p>
            </div>
        }
    }
</body>